<div class="card mb-4">
  <div class="card-header">
    <h3>
      <a class="text-body" href="#collapseNotes" data-toggle="collapse" aria-expanded="true" aria-controls="collapseNotes">
        Notes
      </a>
    </h3>
  </div>

  <div class="collapse show" id="collapseNotes">
    <div class="card-body">

      <% if instance_variable.notes.blank? %>
        <p class="lead">Please update notes.</p>
      <% else %>
        <%= markdown(instance_variable.notes) %>
      <% end %>
      <hr>
      <%= link_to "Top", "#top", class: "text-body" %>

    </div>
  </div>
</div>
