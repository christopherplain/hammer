<%= form_for resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: "form-user"} do |f| %>
  <%= devise_error_messages! %>
  <%= image_tag "R-icon_002.png", width: "72", height: "72", class: "mb-4", alt: "Redapt Logo" %>
  <h1 class="h3 mb-3 font-weight-normal">Forgot your password?</h1>

  <%= f.label :email, "Email address", class: "sr-only" %>
  <%= f.email_field :email, required: true, autofocus: true, autocomplete: "email", placeholder: "Email address", class: "form-control" %>

  <%= f.submit "Send me reset instructions", class: "btn btn-lg btn-outline-light btn-block" %>

  <%= link_to "Cancel", root_path, class: "btn btn-sm btn-outline-light btn-block" %>

  <p class="mt-5 mb-3 text-muted">&copy; <%= Time.current.year %> Redapt, Inc.</p>
<% end %>
