<p id="notice"><%= notice %></p>

<h1>Label Formats</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Format a</th>
      <th>Format b</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @label_templates.each do |label_template| %>
      <tr>
        <td><%= label_template.name %></td>
        <td><%= label_template.template_a %></td>
        <td><%= label_template.template_b %></td>
        <td><%= link_to 'Show', label_template %></td>
        <td><%= link_to 'Edit', edit_label_template_path(label_template) %></td>
        <td><%= link_to 'Destroy', label_template, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Label Format', new_label_template_path %>
