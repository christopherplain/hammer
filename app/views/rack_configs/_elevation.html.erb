<div class="col-12 col-md-6">
  <h3><%= orientation.capitalize %> Elevation</h3>

  <table class="table table-bordered">
    <thead>
      <tr>
        <th scope="col">U</th>
        <th scope="col">Part Number</th>
        <th scope="col">SKU</th>
      </tr>
    </thead>

    <tbody>
      <% u_array = [] %>
      <% (rack_u).downto(1) do |u| %>
        <% component = @elevation.rack_components.where(u_location: u, orientation: orientation).first %>
        <% u_array.push(u) %>

        <% unless component.part_number.nil? %>
          <% u_size = component.u_size %>
          <tr>
            <td><%= u_array.shift %></td>
            <td rowspan="<%= u_size %>"><%= component.part_number %></td>
            <td rowspan="<%= u_size %>"><%= component.sku %></td>
          </tr>

          <% until u_array.empty? %>
            <tr>
              <td><%= u_array.shift %></td>
            </tr>
          <% end %>
        <% end %>
      <% end %>
    </tbody>
  </table>
</div>
