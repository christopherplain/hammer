<h1>Admin</h1>
<ul class="list-inline font-weight-light">
  <li class="list-inline-item">
    <%= link_to 'Users »', admin_users_path, class: "text-body" %>
  </li>
</ul>

<h2>User
  <small class="text-muted">
    <%= @user.full_name %>
  </small>
</h2>

<ul class="list-inline font-weight-light">
  <li class="list-inline-item">
    <%= link_to 'Edit »', edit_admin_user_path(@user), class: "text-body" %>
  </li>
  <li class="list-inline-item">
    <%= link_to 'Disable »', "#", class: "text-body" %>
  </li>
</ul>

<div class="card mb-4">
  <div class="card-header">
    <h3>Details</h3>
  </div>

  <div class="card-body">
    <div class="row">
      <div class="col-auto">
        <table class="table table-borderless">
          <tbody>
            <tr>
              <td><strong>First name:</strong></td>
              <td><%= @user.first_name %></td>
            </tr>
            <tr>
              <td><strong>Last name:</strong></td>
              <td><%= @user.last_name %></td>
            </tr>
            <tr>
              <td><strong>Email:</strong></td>
              <td><%= @user.email %></td>
            </tr>
            <tr>
              <td><strong>Group:</strong></td>
              <td><%= @user.group.name %></td>
            </tr>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
