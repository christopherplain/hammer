<p id="notice"><%= notice %></p>

<h1>Network Connections</h1>

<table>
  <thead>
    <tr>
      <th>Device1 port</th>
      <th>Device2 port</th>
      <th>Cable type</th>
      <th>Cable color</th>
      <th>Cable length</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @network_connections.each do |network_connection| %>
      <tr>
        <td><%= network_connection.device1_port %></td>
        <td><%= network_connection.device2_port %></td>
        <td><%= network_connection.cable_type %></td>
        <td><%= network_connection.cable_color %></td>
        <td><%= network_connection.cable_length %></td>
        <td><%= link_to 'Show', network_connection %></td>
        <td><%= link_to 'Edit', edit_network_connection_path(network_connection) %></td>
        <td><%= link_to 'Destroy', network_connection, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

